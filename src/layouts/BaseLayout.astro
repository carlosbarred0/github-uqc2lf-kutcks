---
import MenuLayout from '../layouts/MenuLayout.astro'
import FootLayout from '../layouts/FootLayout.astro'
import Logo from '../assets/logo.svg'
// src/layouts/BaseLayout.astro
const {title} = Astro.props;
---
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="author" content="Carlos" />
    <meta name="keywords" content="HTML, CSS, Astro" />
    <title>BOOKS RECOMENDATION - {title}</title>
    <link rel="stylesheet" type="text/css" href={Astro.resolve('../styles/base.css')} />
  </head> 
  <body>
    <div id="header">
      <div class="container">
        <div id="logo">
          <!-- Aquí irá el logo -->
          <a href="/home">
            <img class="logo" src={Logo} />
          </a>
        </div>
        <MenuLayout></MenuLayout>
      </div>
    </div> <!-- header -->
    <!-- ======= Bloque de página ======= -->
    <div class="main">
      <slot />
    </div>
        <div class="title"></div>
        <div class="content">
    </div>
    <!-- ======== Pie de página ========= -->
    <FootLayout></FootLayout>
  </body>
</html>